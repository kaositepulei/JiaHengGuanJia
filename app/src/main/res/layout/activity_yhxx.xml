<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.yhxxActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/list_back_t"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="#1074fd"
                    android:src="@mipmap/back"
                    android:layout_marginTop="5dp">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="130dp"
                    android:text="用户信息"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_list_list"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="姓名"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:textSize="20sp"
                android:focusable="false"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/xingming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint=""
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:textColorHint="#000000"
                android:layout_gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_list_list"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="身份证号码"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:focusable="false"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/shenfenzhenghaoma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint=""
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:screenReaderFocusable="false"
                android:textColorHint="#000000"
                android:layout_gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_list_list"
            android:orientation="horizontal"
            android:layout_gravity="center">



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="单位编号"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:focusable="false"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/danweibianhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint=""
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:screenReaderFocusable="false"
                android:textColorHint="#000000"
                android:layout_gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_list_list"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="联系电话"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:focusable="false"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/lianxidianhua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint=""
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:screenReaderFocusable="false"
                android:textColorHint="#000000"
                android:layout_gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_list_list"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="员工编号"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:focusable="false"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/yuangongbianhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint=""
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:screenReaderFocusable="false"
                android:textColorHint="#000000"
                android:layout_gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_list_list"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="证书编号"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:focusable="false"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/zhengshubianhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint=""
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:screenReaderFocusable="false"
                android:textColorHint="#000000"
                android:layout_gravity="right" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_list_list"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="发证日期"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:focusable="false"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/fazhengriqi"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:hint="点击选择年月日"
                android:textAlignment="viewEnd" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_list_list"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="有效日期"
                android:textColor="#bfc6d0"
                android:textColorLink="#000000"
                android:screenReaderFocusable="false"
                android:focusable="false" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/youxiaoriqi"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:hint="点击选择年月日"
                android:textAlignment="viewEnd" />

        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="294dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="@drawable/but_sub"
            android:text="提交">
        </Button>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="294dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="#ffffff"
            android:text="取消">
        </Button>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>