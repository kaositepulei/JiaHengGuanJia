<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.yhxxActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/list_back_t"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="#1074fd"
                    android:src="@mipmap/back"
                    android:layout_marginTop="5dp">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="111dp"
                    android:text="绑定气瓶条码"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_list_list"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="气瓶条码"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp"
                android:focusable="false"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/qipingbianma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="请扫描获取气瓶条码"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:layout_gravity="right"
                android:textAlignment="viewEnd"/>
            <ImageButton
                android:id="@+id/saomiao"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@mipmap/saomiao"
                android:background="#f6faff">

            </ImageButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_list_list"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="出厂编号"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:textColorHint="#000000"
                android:focusable="false"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/chuchangbianhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="请输入出厂编号"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:layout_gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_list_list"
            android:orientation="horizontal"
            android:layout_gravity="center">



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="带有气瓶钢印号的气瓶照片"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:textColorHint="#000000"
                android:focusable="false"/>


            <ImageView
                android:id="@+id/show_img"
                android:layout_width="40dp"
                android:layout_height="78dp">

            </ImageView>

            <EditText
                android:id="@+id/shangchuanzhaopian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:layout_marginLeft="15dp"
                android:focusable="false"
                android:hint="上传照片"
                android:textColor="#000000"
                android:textColorHint="#2d7aed"
                android:textColorLink="#000000" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="294dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="@drawable/but_sub"
            android:text="提交">
        </Button>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="294dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="#ffffff"
            android:text="取消">
        </Button>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>